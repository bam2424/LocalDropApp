<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalDropApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LocalDropApp"
    xmlns:views="clr-namespace:LocalDropApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="280"
    Shell.FlyoutBackgroundColor="{StaticResource DarkNavy}"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False"
    Title="LocalDropApp">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource DarkNavy}" 
              Padding="24,40,24,24" 
              RowDefinitions="Auto,Auto,Auto">
            
            <!-- App Icon/Logo -->
            <Border Grid.Row="0"
                    BackgroundColor="#512BD4"
                    WidthRequest="56"
                    HeightRequest="56"
                    StrokeShape="RoundRectangle 12"
                    HorizontalOptions="Start">
                <Label Text="ðŸ“¡" 
                       FontSize="24" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"
                       TextColor="White" />
            </Border>
            
            <!-- App Title -->
            <Label Grid.Row="1" 
                   Text="Local Drop" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource TextOnDark}" 
                   Margin="0,16,0,4" />
            
            <!-- App Subtitle -->
            <Label Grid.Row="2" 
                   Text="File Transfer Made Simple" 
                   FontSize="14" 
                   TextColor="{StaticResource TextOnDarkSecondary}" />
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Flyout Items -->
    <FlyoutItem Title="Dashboard" 
                Route="dashboard">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="ðŸ " Color="#512BD4" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Transfer History" 
                Route="history">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="ðŸ“" Color="#512BD4" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate views:HistoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" 
                Route="settings">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="âš™ï¸" Color="#512BD4" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>

    <!-- Flyout Footer -->
    <Shell.FlyoutFooter>
        <Grid BackgroundColor="{StaticResource DarkNavy}" 
              Padding="24,16,24,32"
              RowDefinitions="Auto,Auto"
              RowSpacing="12">
            
            <!-- Connection Status -->
            <Border Grid.Row="0"
                    BackgroundColor="{StaticResource DarkNavyLight}"
                    StrokeShape="RoundRectangle 8"
                    Padding="16,12">
                <Grid ColumnDefinitions="Auto,*">
                    <Ellipse Grid.Column="0"
                             Fill="{StaticResource Success}"
                             WidthRequest="8"
                             HeightRequest="8"
                             VerticalOptions="Center" />
                    <Label Grid.Column="1"
                           Text="Connected"
                           FontSize="12"
                           TextColor="{StaticResource TextOnDarkSecondary}"
                           Margin="8,0,0,0"
                           VerticalOptions="Center" />
                </Grid>
            </Border>
            
            <!-- Theme Toggle -->
            <Button Grid.Row="1"
                    x:Name="ThemeToggleButton"
                    Text="ðŸŒ™ Dark Mode"
                    Clicked="OnThemeToggleClicked"
                    BackgroundColor="{StaticResource DarkNavyLight}"
                    TextColor="{StaticResource TextOnDark}"
                    CornerRadius="8"
                    FontSize="14"
                    Padding="16,12"
                    BorderWidth="0" />
        </Grid>
    </Shell.FlyoutFooter>

    <!-- Custom Flyout Item Style -->
    <Shell.Resources>
        <Style TargetType="Shell">
            <Setter Property="Shell.FlyoutBackgroundColor" Value="{StaticResource DarkNavy}" />
        </Style>
        
        <Style TargetType="FlyoutItem" ApplyToDerivedTypes="True">
            <Setter Property="Shell.BackgroundColor" Value="{StaticResource DarkNavy}" />
            <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextOnDarkSecondary}" />
            <Setter Property="Shell.TitleColor" Value="{StaticResource TextOnDarkSecondary}" />
            <Setter Property="Shell.UnselectedColor" Value="{StaticResource TextOnDarkSecondary}" />
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource DarkNavy}" />
            <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource TextOnDark}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource TextOnDark}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextOnDarkSecondary}" />
        </Style>
    </Shell.Resources>

</Shell>
